<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.csc325_firebase_webview_auth.view.RegisterController">
    <children>
        <Label text="Register" />
        <TextField fx:id="nameField" promptText="Name" />
        <TextField fx:id="emailField" promptText="Email" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Button onAction="#handleRegister" text="Register" />
        <Button onAction="#backToLogin" text="Back to Login" />
    </children>
</VBox>